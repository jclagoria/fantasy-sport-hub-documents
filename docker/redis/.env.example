# Redis Container Configuration
# Docker image for Redis server (e.g., redis:7.2, redis:latest)
REDIS_IMAGE={{REDIS_IMAGE}}

# Name for the Redis container
REDIS_CONTAINER_NAME={{REDIS_CONTAINER_NAME}}

# Port on the host machine to expose Redis (default: 6379)
REDIS_PORT={{REDIS_PORT}}

# Container restart policy (always, unless-stopped, on-failure, no)
REDIS_RESTART_POLICY={{REDIS_RESTART_POLICY}}

# Redis Commander Configuration
# Docker image for Redis Commander web interface
REDIS_COMMANDER_IMAGE={{REDIS_COMMANDER_IMAGE}}

# Name for the Redis Commander container
REDIS_COMMANDER_CONTAINER_NAME={{REDIS_COMMANDER_CONTAINER_NAME}}

# Port on the host machine to expose Redis Commander web interface (default: 8081)
REDIS_COMMANDER_PORT={{REDIS_COMMANDER_PORT}}

# Hostname or IP of the Redis server that Redis Commander will connect to
# When using Docker Compose, this should match the Redis service name
REDIS_COMMANDER_REDIS_HOST={{REDIS_COMMANDER_REDIS_HOST}}

# Port of the Redis server that Redis Commander will connect to (should match REDIS_PORT)
REDIS_COMMANDER_REDIS_PORT={{REDIS_COMMANDER_REDIS_PORT}}

# Network Configuration
# Name of the Docker network to create for Redis services
NETWORK_NAME={{NETWORK_NAME}}

# Network driver to use (bridge, overlay, etc.)
NETWORK_DRIVER={{NETWORK_DRIVER}}

# Security Configuration
# Strong password for Redis authentication (REQUIRED in production)
REDIS_PASSWORD={{REDIS_PASSWORD}}

# Username for Redis Commander HTTP Basic Authentication
REDIS_COMMANDER_HTTP_AUTH_USER={{REDIS_COMMANDER_HTTP_AUTH_USER}}

# Password for Redis Commander HTTP Basic Authentication
REDIS_COMMANDER_HTTP_AUTH_PASSWORD={{REDIS_COMMANDER_HTTP_AUTH_PASSWORD}}

# Comma-separated list of hosts Redis Commander can connect to
# Use '*' to allow all hosts (not recommended for production)
REDIS_COMMANDER_ACCESS_KEY={{REDIS_COMMANDER_ACCESS_KEY}}

# Set to 'true' to disable Redis Commander's web interface authentication
# WARNING: Only use this for development environments
REDIS_COMMANDER_NO_AUTH={{REDIS_COMMANDER_NO_AUTH}}
